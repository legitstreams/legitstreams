    <ul class="thumbnails">
      <div class="row">

        <% @movies.each do |movie| %>
          <li class="span2">
            <div itemscope itemtype="http://schema.org/Movie" class="thumbnail" align="center" >
                <%= link_to image_tag(movie.poster_url(:movie_small_poster).to_s, :title => 'Watch Online - '+movie.title, :alt => 'Watch '+movie.title+' online', :itemprop=>'image'), movie, :itemprop=>'url' %>
                <h5><%= link_to truncate(movie.title, :length => 15) ,movie, :itemprop=>'url'%></h5>
                <h6 itemprop="inLanguage"><%=truncate(movie.language, :length => 15)%></h6>
            </div>
            <br><br>
          </li>
        <% end %>
      </div>
    </ul>
    <div class="pagination pagination-centered">
        <%= will_paginate @movies %>
    </div>
