<%= form_tag movies_path, :method=> :get, :id => "movies_search" do %>
    <h5>
      <strong>Watch movies in</strong>

      <div style="display: inline">
      <%= select("movie","language", Movie.all.map {|u| [u.language,u.language]}.uniq,{:prompt=> "ANY LANGUAGE"},{:name => "language",:class=>"select", :title=>"ANY LANGUAGE"} )  %>
      </div>

      <strong>after</strong>

      <div style="display: inline">
      <%= select("movie","year",Movie.order("year DESC").map {|u| [u.year,u.year]}.uniq,{:prompt=> "ANY YEAR"},{:name => "year",:class=>"select", :title=>"ANY YEAR"})  %>
      </div>

      <strong> starring</strong>

      <div style="display: inline">
      <%= select("actor","name",Actor.select("* ,count(name) as c_name").group("name").order("c_name DESC").map {|u| [u.name,u.name]}.uniq ,{:prompt=> "ANY"},{:name => "actor_1",:class=>"select", :title=>"ANY ACTOR"})  %>
      </div>

        <strong>and</strong>

      <div style="display: inline">
        <%= select("actor","name",Actor.select("*   ,count(name) as c_name").group("name").order("c_name DESC").map {|u| [u.name,u.name]}.uniq,{:prompt=> "ANY"},{:name => "actor_2",:class=>"select", :title=>"ANY ACTOR"} )  %>
      </div>

    </h5>

    <!--<%= submit_tag "Search", :name=>nil, :hidden=> :true %>-->
<% end %>